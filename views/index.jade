extends layout

block body
  h1 Sharing multiple angular.js models over separate channels in a Socket.io Socket
  div(ng-controller='TaskCtrl')
    h2 Syncing model over "tasks" channel
    ul.tasks
      li(ng-repeat='task in tasks')
        p {{task.text}}
    form(ng-submit="addTask()")
      input(type='text', ng-model='taskText', size='30', placeholder='add new task here')
      input(class='btn-primary', type='submit', value='add')
  div(ng-controller='DiscussionCtrl')
    h2 Syncing model over "comments" channel
    ul.comments
      li(ng-repeat='comment in comments')
        p {{comment.text}}
    form(ng-submit="addComment()")
      input(type='text', ng-model='commentText', size='30', placeholder='add new comment here')
      input(class='btn-primary', type='submit', value='add')


  script(src='js/lib/angular/angular.js')
  script(src='/socket.io/socket.io.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
